@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WorkForYou.Shared.ViewModels.Forms.RemindPasswordViewModel

@inject IViewLocalizer ViewLocalization

@{
    ViewData["Title"] = ViewLocalization["Title"];
}

<section class="section forger-password form-section">
    <div class="home-container text-center">
        <h2 class="section-title mb-5">@ViewLocalization["Title"]</h2>
        <form method="post" asp-controller="Auth" asp-action="RemindPassword" asp-antiforgery="true"
              autocomplete="off">
            <div asp-validation-summary="All"></div>
            <div class="contact-form__input">
                <input asp-for="Email" placeholder="Email" class="contact-form__input-item">
            </div>

            <div class="contact-form__btn">
                <button class="button button-primary text-center">
                    <i class="fa-solid fa-bookmark"></i>
                    @ViewLocalization["FormButton"]
                </button>
            </div>
        </form>
    </div>
</section>