@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WorkForYou.Shared.ViewModels.Forms.ResetPasswordViewModel

@inject IViewLocalizer ViewLocalization

@{
    ViewData["Title"] = ViewLocalization["Title"];
}

@section Styles
{
    <link rel="stylesheet" href="~/css/home_pages.css">
}

<section class="section reset-password form-section">
    <div class="container text-center">
        <h2 class="section-title mb-5">@ViewLocalization["Title"]</h2>
        <form method="post" asp-controller="Auth" asp-action="ResetPassword" asp-antiforgery="true" autocomplete="off">
            <div asp-validation-summary="All"></div>
            <input asp-for="Token" type="hidden">
            <input asp-for="Email" type="hidden">
            <div class="contact-form__input">
                <input asp-for="NewPassword" placeholder="New password" class="contact-form__input-item">
                <span><i class="fa-solid fa-eye"></i></span>
            </div>
            <div class="contact-form__input">
                <input asp-for="ConfirmNewPassword" placeholder="Confirm new password" class="contact-form__input-item">
            </div>
            
            <div class="contact-form__btn">
                <button class="button button-primary text-center">
                    <i class="fa-solid fa-bookmark"></i>
                    @ViewLocalization["FormButton"]
                </button>
            </div>
        </form>
    </div>
</section>

@section Scripts
{
    <script src="~/libs/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/home-password.js"></script>
}