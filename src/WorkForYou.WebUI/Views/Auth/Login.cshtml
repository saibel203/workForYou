@model LoginViewModel

@{
    ViewData["Title"] = "Авторизація";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/home_pages.css">
}

<section class="section form-section login">
    <div class="container text-center">
        <h2 class="section-title mb-5">Авторизація</h2>
        <form method="post" asp-controller="Auth" asp-action="Login" asp-antiforgery="true" autocomplete="off"
              class="contact-form" asp-route-returnUrl="@ViewData["ReturnUrl"]">
            <div asp-validation-summary="All"></div>
            <div class="contact-form__input">
                <input asp-for="Email" placeholder="Email" class="contact-form__input-item">
            </div>
            <div class="contact-form__input">
                <input asp-for="Password" placeholder="Password" class="contact-form__input-item">
            </div>
            <div class="contact-form__footer">
                <div><input asp-for="RememberMe"><span>Запам'ятати</span></div>
                <div>
                    <a asp-controller="Auth" asp-action="ForgetPassword">Забули пароль?</a>
                </div>
            </div>
            <div class="contact-form__btn">
                <button class="button button-primary text-center">
                    <i class="fa-solid fa-right-to-bracket"></i>
                    Авторизуватись
                </button>
            </div>
        </form>
    </div>
</section>

@section Scripts
{
    <script src="~/libs/js/jquery.slim.min.js" crossorigin="anonymous"></script>
    <script src="~/libs/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
}