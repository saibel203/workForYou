@model IEnumerable<WorkForYou.Core.Models.IdentityInheritance.ApplicationUser>

@{
    ViewData["Title"] = "Мої чати";
}

<div class="chat-wrapper">
    <h1>Мої чати</h1>

    <div class="chat-wrapper__chats">
        @foreach (var chat in Model)
        {
            <a asp-controller="Chat" asp-action="ChatDetails" asp-route-employerUsername="@User.Identity?.Name"
               asp-route-candidateUsername="@chat.UserName">
                <div class="chat-wrapper__chats-chat">
                    <div class="char-wrapper__chats-chat-inner-wrapper">
                        <div class="chat-wrapper__chats-chat-main">
                            @if (string.IsNullOrEmpty(chat.ImagePath))
                            {
                                <img src="~/img/userImages/default-user-image.png" alt="User image">
                            }
                            else
                            {
                                <img src="@chat.ImagePath" alt="User image">
                            }
                        </div>
                        <div class="chat-wrapper__chats-chat-info">
                            <h3>@chat.LastName @chat.FirstName <span></span></h3>
                            <p>@chat.UserName</p>
                        </div>
                    </div>
                    <a href="" class="chat-remove-btn"><i class="fa-sharp fa-solid fa-bucket"></i></a>
                </div>
            </a>
        }
    </div>
</div>