@using WorkForYou.WebUI.Helpers
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer ViewLocalization

@{
    ViewData["Title"] = ViewLocalization["Title"];
}

<div class="card-details">
    <div class="card-details__main">
        <div class="card-details__header">
            <h1>@Model.VacancyTitle</h1>
            <span>$@Model.FromSalary-@Model.ToSalary</span>
        </div>
        <div class="card-details__body">
            <p>@Html.Raw(Model.LongDescription)</p>
        </div>
        @if (Model.EmployerUser is not null)
        {
            @if (!string.IsNullOrEmpty(Model.EmployerUser.CompanyName)
                 && !string.IsNullOrEmpty(Model.EmployerUser.AboutCompany))
            {
                <div class="card-details__company">
                    <h3>@ViewLocalization["AboutCompany"] @Model.EmployerUser.CompanyName</h3>
                    <p>@Model.EmployerUser.AboutCompany</p>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.EmployerUser.DoyCompanyLink))
            {
                <h4>@ViewLocalization["AboutCompany"]:</h4>
                <a href="@Model.EmployerUser.DoyCompanyLink" target="_blank">@Model.EmployerUser.DoyCompanyLink</a>
            }
        }
        <div class="card-details__footer">
            <div>
                <i class="fa-solid fa-calendar-days"></i>
                <span>@ViewLocalization["CompanyPublished"] @Model.CreatedDate.ToString("d MMMM yyyy")</span>
            </div>
            <div>
                <i class="fa-regular fa-eye"></i>
                <span>
                    @Model.ViewCount
                    @ViewLocalization["VacancyView"]@(ViewHelpers.GetLastStringLetters(Model.ViewCount))
                </span>
                <i class="fa-solid fa-user-group" style="padding-left: 5px;"></i>
                <span>
                    5
                    @ViewLocalization["Review"]@(ViewHelpers.GetLastStringLetters(5))
                </span>
            </div>
        </div>
        @if (User.IsInRole("candidate"))
        {
            <div class="card-details__buttons">
                <button class="search-buttons card-buttons">@ViewLocalization["Respond"]</button>
            </div>
        }
    </div>
    <div class="card-details__info">
        @if (Model.WorkCategory is not null)
        {
            <p><i class="fa-regular fa-clipboard"></i> @ViewLocalization["Category"]: @Model.WorkCategory.CategoryName</p>
        }
        @if (Model.EnglishLevel is not null)
        {
            <p><i class="fa-solid fa-book"></i> @ViewLocalization["English"]: @Model.EnglishLevel.NameLevel</p>
        }
        @if (Model.EnglishLevel is not null)
        {
            @if (Model.ExperienceWork == 0)
            {
                <p><i class="fa-solid fa-graduation-cap"></i> @ViewLocalization["NoExperience"]</p>
            }
            else
            {
                <p>
                    <i class="fa-solid fa-graduation-cap"></i> @ViewLocalization["Experience"]: @Model.ExperienceWork
                    @ViewHelpers.GetLastStringLetters(Model.ExperienceWork, true)
                </p>
            }
        }
        @if (Model.VacancyDomain is not null)
        {
            <p><i class="fa-solid fa-lines-leaning"></i> @ViewLocalization["Domain"]: @Model.VacancyDomain.VacancyDomainName</p>
        }
        @if (Model.HowToWork is not null)
        {
            <p>
                <i class="fa-solid fa-briefcase"></i> @Model.HowToWork.HowToWorkName
            </p>
        }
        @if (Model.CandidateRegion is not null)
        {
            <p>
                <i class="fa-solid fa-earth-americas"></i>
                @if (Model.CandidateRegion.CandidateRegionName == "Весь світ")
                {
                    <span>@ViewLocalization["AllWorld"]</span>
                }
                else if (Model.CandidateRegion.CandidateRegionName == "Україна + Європа")
                {
                    <span>@ViewLocalization["UkraineEurope"]</span>
                }
                else if (Model.CandidateRegion.CandidateRegionName == "Лише Європа")
                {
                    <span>@ViewLocalization["Europe"]</span>
                }
                else if (Model.CandidateRegion.CandidateRegionName == "Лише Україна")
                {
                    <span>@ViewLocalization["Ukraine"]</span>
                }
            </p>
        }
    </div>
</div>