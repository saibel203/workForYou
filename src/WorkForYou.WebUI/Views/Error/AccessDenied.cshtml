@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer ViewLocalization

@{
    ViewData["Title"] = ViewLocalization["Title"];
}

<div class="container-title">
    <div class="subtitle">@ViewLocalization["Error"]</div>
    <a asp-controller="Home" asp-action="Index" class="error-link">@ViewLocalization["GoToMainPage"]</a>
</div>